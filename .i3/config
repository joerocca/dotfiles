#Volume Buttons
bindsym XF86AudioRaiseVolume exec --no-startup-id pactl set-sink-volume $(pactl info | grep -i "Default Sink" | cut -f3 -d' ') +5%
bindsym XF86AudioLowerVolume exec --no-startup-id pactl set-sink-volume $(pactl info | grep -i "Default Sink" | cut -f3 -d' ') -5%
bindsym XF86AudioMute exec --no-startup-id pactl set-sink-mute $(pactl info | grep -i "Default Sink" | cut -f3 -d' ') toggle

#Backlight Buttons
